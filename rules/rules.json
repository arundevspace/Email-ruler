[
  {
    "description": "Linked Job Alerts Processing",
    "predicate": "Any",
    "conditions": [
      {
        "field": "From",
        "operator": "contains",
        "value": "jobalerts-noreply@linkedin.com"
      },
      {
        "field": "Subject",
        "operator": "contains",
        "value": "Job"
      },
      {
        "field": "Received Date/Time",
        "operator": "less than (days)",
        "value": "7"
      }
    ],
    "actions": [
      {
        "type": "Move Message",
        "value": "Processed" 
      },
      {
        "type": "Mark as Read"
      }
    ]
  },
  {
    "description": "Spam/Promo Cleanup Example",
    "predicate": "All",
    "conditions": [
      {
        "field": "From",
        "operator": "equals",
        "value": "jobs-noreply@linkedin.com"
      },
      {
        "field": "Message",
        "operator": "contains",
        "value": "Jobs"
      }
    ],
    "actions": [
      {
        "type": "Mark as Unread"
      },
      {
        "type": "Move Message",
        "value": "Trash"
      }
    ]
  }
]


